<div class="container-fluid fill-height signInContainer">
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
        <div id="first">
            <div class="signin form ">
                <div class="logo mb-3">
                    <div class="col-md-12 text-center">
                    <h1>Iniciar sesión</h1>
                </div>
            </div>
                <form action="/sessions" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Correo electrónico</label>
                        <input type="email" name="user[email]" class="form-control" placeholder="Correo electrónico">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contraseña</label>
                        <input type="password" name="user[password]" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="col-md-12 text-center ">
                        <button type="submit" class=" btn btn-block mybtn tx-tfm">Ingresar</button>
                    </div>
                </form>
                <div class="errors">
                    <% if flash[:signin_errors] %>
                        <%flash[:signin_errors].each do |error| %>
                            <p> <%=error%></p>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>    
        </div>    
        <div class="col">
        </div>
    </div>
</div>   