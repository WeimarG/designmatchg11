<div class="container-fluid signUpContainer fill-height">
    <div class="row">
        <div class="col">
        </div>
        <div class="col">

        <div id="first">

            <div class="signup form ">

                <div class="logo mb-3">
                    <div class="col-md-12 text-center">
                    <h1>Registro</h1>
                </div>
            </div>
                <form action="/users" method="POST">
                    <div class="form-group">
                        <label>Nombre empresa</label>
                        <input type="text" name="user[company]"  class="form-control" placeholder="Nombre empresa">
                    </div>
                    <div class="form-group">
                        <label>Correo electrónico</label>
                        <input type="email" name="user[email]" class="form-control" placeholder="Correo electrónico">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" name="user[password]" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <label>Confirmar contraseña</label>
                        <input type="password" name="user[password_confirmation]" class="form-control" placeholder="Confirmar contraseña">
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="submit" class=" btn btn-block mybtn tx-tfm">Registrarme</button>
                    </div>
                </form>
                <div class="errors">
                    <% if flash[:signup_errors] %>
                      <p> <%= flash[:signup_errors] %></p>
                    <% end %>
                </div>
            </div>

        </div>  
        </div>
        <div class="col">
        </div>
    </div>

    
</div>   
